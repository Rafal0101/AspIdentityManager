@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<h1>Wszystkie Role</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width: auto" asp-controller="administration" asp-action="createrole">Utwórz Rolę</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Id Roli: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div>
                <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id">
                    <a class="btn btn-primary"
                       asp-action="EditRole" asp-controller="Administration"
                       asp-route-id="@role.Id">Edytuj</a>
                    <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Potwierdź usunięcie roli: @role.Name')">
                        Usuń
                    </button>
                    </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Brak Ról
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Użyj przycisku poniżej
            </h5>
            <a class="btn btn-primary" asp-controller="administration" asp-action="createrole">Utwórz Rolę</a>
        </div>
    </div>
}