@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h1>Wszystkie Role</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width: auto" asp-controller="Account" asp-action="Register">Utwórz Użytkownika</a>

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Id Użytkownika: @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <div class="card-footer">
                    <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                        <a asp-action="EditUser" asp-controller="Administration"
                           asp-route-id="@user.Id" class="btn btn-primary">Edytuj</a>
                        <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Potwierdź usunięcie użytkownika: @user.UserName')">
                                Usuń
                            </button>
                        @*<span id="confirmDeleteSpan_@user.Id" style="display:none">
                            <span>Na pewno chcesz usunąć?</span>
                            <button type="submit" class="btn btn-danger">Tak</button>
                            <a href="#" class="btn btn-primary"
                               onclick="confirmDelete('@user.Id', false)">Nie</a>
                        </span>

                        <span id="deleteSpan_@user.Id">
                            <a href="#" class="btn btn-danger"
                               onclick="confirmDelete('@user.Id', true)">Usuń</a>
                        </span>*@
                    </form>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Brak Użytkowników
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Użyj przycisku poniżej
            </h5>
            <a class="btn btn-primary" asp-controller="account" asp-action="createrole">Utwórz Rolę</a>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}